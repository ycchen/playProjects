<% title "Show Product" %>
<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @product.name %>
</p>

<p>
  <b>Price:</b>
  <%= @product.price %>
</p>

<b>Categories</b>
<ul>
	<% @product.categories.each do |category| %>
	<li><%= category.name %></li>
	<% end %>
</ul>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'All Products', products_path %>
